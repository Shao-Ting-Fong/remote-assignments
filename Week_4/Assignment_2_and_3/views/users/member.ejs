<% layout('layouts/boilerplate') %>
<div class="row mb-3">
  <div class="col-6">
    <h2>User Profile</h2>
    <div class="card">
      <img src="/img/user.png" class="card-img-top w-50 mx-auto mt-3" alt="selfie" />
      <div class="card-body">
        <h5 class="card-title text-center">User email: <%= currentUser.email %></h5>
        <h6 class="card-subtitle mb-2 text-body-secondary text-center">User id: <%= currentUser.id %></h6>
      </div>
    </div>
    <a href="/logout" class="btn btn-danger mt-3">Logout</a>
  </div>
  <div class="col-6">
    <h2>All Posts</h2>
    <% for(let article of articles){ %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= article.title %></h5>
        <p class="card-text"><%= article.content %></p>
      </div>
    </div>
    <% } %>
  </div>
</div>
